{% extends "CoreBundle::layout.html.twig" %}

{% block title %}{{ 'tag.plural' | trans }}{% endblock %}

{% block sidebar %}
    <aside>
        <h3>{{ 'tag.all' | trans }}</h3>

        {% for tag in tags %}
            <p><a href="{{ path('blog_core_tag_show', { slug: tag.id }) }}">{{ tag.name }}</a></p>
        {% endfor %}
    </aside>
{% endblock %}

{% block section %}

{% endblock %}
